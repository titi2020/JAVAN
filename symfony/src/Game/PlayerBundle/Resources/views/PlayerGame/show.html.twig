{% extends "GamePlayerBundle::layout_crud.html.twig" %}

{% block content %}
    <h1>Player Game</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Player</th>
                <td>{{ entity.player.username }}</td>
            </tr>
            <tr>
                <th>Game</th>
                <td>{{ entity.game.name }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('playergame') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('playergame_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
