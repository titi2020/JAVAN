{% extends "GamePlayerBundle::layout_crud.html.twig" %}

{% block content %}
    <h1>Game list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Game</th>
                <th>Player</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('playergame_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.game.name }}</td>
                    <td>{{ entity.player.username}}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('playergame_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('playergame_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('playergame_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
